<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

     <!-- BOOTSTRAP CDN-->
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
   
     <!-- CSS -->
     <link href="/main.css" rel="stylesheet" />
    
    <!-- Tittle (tab) -->
    <title>Blog Web</title>
</head>

<%- include("partials/header.ejs") %>

<!-- Img title -->
<div class="imgHeader bg-dark">
    <img class="d-block mb-4 fitContainer" src="/imgs/books_img.jpg" alt="">
</div>

<!-- Posting form-->
<div class="container postingForm">
<form action="/submit" method="POST">
    <!-- Post title input-->
    <div class="mb-3">
        <label for="html" class="form-label">Post Title</label>
        <input type="text" name="pTitle" class="form-control" id="postTitle" placeholder="The Title of your Post">
    </div>
    <!-- Post Content input-->
    <div class="mb-3">
        <label for="html" class="form-label">Write your story</label>
        <textarea class="form-control" name="pContent" id="postContent" placeholder="Your story goes here" rows="3"></textarea>
    </div>
    <!-- Submit button-->
    <button class="btn btn-primary rounded-pill px-3 bg-dark" type="submit">Submit Story</button>
</form>
</div>


<!-- Posteo actuales-->
<div class="containerFull bg-dark">
    <h2>POSTS</h2>
</div>

<div class="container" id="postContainer">
    <%if (locals.titles) {%>
        <ul>
          <% for(let i=0;i<titles.length;i++){%>
            <li class="liPosts"><%= titles[i] %></li>
            <p><%= contents[i] %></p>
          <% } %>
        </ul>
        <% } else { %>
        <p>The are no posts yet</p>
    <% } %>
</div>

</body>